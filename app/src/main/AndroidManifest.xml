<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.joinersa.batalhanaval">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MeuTabuleiroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CombateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ListaDevicesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BluetoothCheckActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BluetoothChatServerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.VitoriaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DerrotaActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.SobreActivity"></activity>
    </application>

</manifest>